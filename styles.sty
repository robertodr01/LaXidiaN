% #1 -> color
% #2 -> title
% #3 -> text
% #4 -> label

\newcommand{\custombox}[4]{

    \ifthenelse{\equal{#4}{}}{ % TRUE
        \begin{callouts-no-label}{#1}
            {\bfseries {#2}}\par % Title
            \ifx&#2&
                #2 % #2 is empty
            \else 
                \vspace{0.3cm}
                    #2
            \fi
        \end{callouts-no-label}
    }{ % FALSE
        \begin{callouts-with-label}{#1}{#4}
            {\bfseries {#2} (\thetcbcounter)\par} % Title
            \ifx&#2&
                #2 % #2 is empty
            \else 
                \vspace{0.3cm}
                    #2
            \fi
        \end{callouts-with-label}
    }

}

\newcommand{\quotebox}[2]{
    \ifthenelse{\equal{#2}{}}{
        \begin{quote-no-label}
            #1 
        \end{quote-no-label}
    }{
        \begin{quote-with-label}{#2}
            #1 (\thetcbcounter) 
        \end{quote-with-label}
    }
}

\newcommand{\theorembox}[3]{
    \ifthenelse{\equal{#1}{}}{
        \begin{theoremb}{theorem-proofbox}{#3}
            \textcolor{theorem-prooftitle}{ \bfseries Theorem (\thetcbcounter). \space}\par % Title
            \ifx&#2&
                #2 % #2 is empty
            \else 
                \vspace{0.3cm}
                    #2
            \fi
        \end{theoremb}
    }{
        \begin{theoremb}{theorem-proofbox}{#3}
            \textcolor{theorem-prooftitle}{ \bfseries Theorem (\thetcbcounter) {#1}. \space}\par % Title
            \ifx&#2&
                #2 % #2 is empty
            \else 
                \vspace{0.3cm}
                    #2
            \fi
        \end{theoremb}
    }
}

\newcommand{\proofbox}[3]{
    \begin{proof-with-label}{theorem-proofbox}{#3}
        \textcolor{theorem-prooftitle}{ \bfseries Proof (\thetcbcounter) Theorem \ref{#2} \space}\par % Title
        \vspace{0.3cm}
            #1
    \end{proof-with-label}
}

