% STYLE CHAPTER %

\titleformat{\chapter}[display]
  {\bfseries\Large}
  {\filleft\MakeUppercase{\chaptertitlename} \LARGE\thechapter}
  {1ex}
  {\titlerule\Huge\vspace{1ex}\filright}
  [\vspace{1ex}\titlerule]

\def\blankpage{%
      \clearpage%
